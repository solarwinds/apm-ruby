# this gemfile covers the basics for testing
# included it in other gemfiles with the following line of code:

group :development, :test do
  gem 'benchmark-ips', '>= 2.7.2'
  gem 'bson'
  gem 'byebug', '>= 8.0.0'
  gem 'debugger',     :platform  =>  :mri_19
  gem 'e2mmap'
  gem 'get_process_mem'
  gem 'irb', '>= 1.0.0'
  gem 'memory_profiler'
  gem 'minitest'
  gem 'minitest-debugger', :require => false
  gem 'minitest-focus', '>=1.1.2'
  gem 'minitest-hooks', '>= 1.5.0'
  gem 'minitest-reporters', '< 1.0.18'
  gem 'mocha'
  gem 'rack-cache'
  gem 'rack-test'
  gem 'rake'
  gem 'rubocop', require: false
  gem "simplecov", require: false, group: :test
  gem 'simplecov-console'
  gem 'webmock' if RUBY_VERSION >= '2.0.0'
  gem 'lumberjack'
  gem 'logging'

  gem 'opentelemetry-sdk'
  gem 'opentelemetry-instrumentation-all'
  gem 'opentelemetry-propagator-b3'

  source "https://packagecloud.io/solarwinds/opentelemetry-ruby-metrics-sdk/" do
    gem "opentelemetry-metrics-sdk", '~> 0.0.1'
  end

  source "https://packagecloud.io/solarwinds/opentelemetry-ruby-metrics-api/" do
    gem "opentelemetry-metrics-api", '~> 0.0.1'
  end

  source 'https://packagecloud.io/solarwinds/opentelemetry-exporter-otlp/' do
    gem 'opentelemetry-exporter-otlp', '0.26.2'
  end
  
end
