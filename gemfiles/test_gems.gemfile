# this gemfile covers the basics for testing
# included it in other gemfiles with the following line of code:

group :development, :test do
  gem 'benchmark-ips', '>= 2.7.2'
  gem 'bson'
  gem 'byebug', '>= 8.0.0'
  gem 'debugger',     :platform  =>  :mri_19
  gem 'e2mmap'
  gem 'get_process_mem'
  gem 'irb', '>= 1.0.0'
  gem 'memory_profiler'
  gem 'minitest'
  gem 'minitest-debugger', :require => false
  gem 'minitest-focus', '>=1.1.2'
  gem 'minitest-hooks', '>= 1.5.0'
  gem 'minitest-reporters', '< 1.0.18'
  gem 'mocha'
  gem 'puma'
  gem 'rack-cache'
  gem 'rack-test'
  gem 'rake'
  gem 'rubocop', require: false
  gem 'simplecov', '>= 0.16.0'
  gem 'simplecov-console'
  gem 'webmock' if RUBY_VERSION >= '2.0.0'

  gem 'opentelemetry-sdk'
  gem 'opentelemetry-exporter-otlp', '~> 0.24.0'
  gem 'opentelemetry-instrumentation-all'
  gem 'opentelemetry-propagator-b3'
  
end
